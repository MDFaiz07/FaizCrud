@model FaizCrud.Models.F_Model
@{
    ViewBag.Title = "Form";
}

<h2>Form</h2>
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Forms</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Basic Form Elements
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                @using (Html.BeginForm("Form", "Home", FormMethod.Post))
                                {
                                    @Html.HiddenFor(m => m.Id);
                                    <div class="form-group">
                                        <label>Name</label>

                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required" })

                                    </div>
                                    <div class="form-group">
                                        <label>Age</label>

                                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @required = "required" })

                                    </div>

                                    <div class="form-group">
                                        <label>Technology</label>

                                        @Html.TextBoxFor(m => m.Technology, new { @class = "form-control", @required = "required" })

                                    </div>

                                    <div class="form-group">
                                        <label>Email</label>

                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })

                                    </div>


                                    <button type="submit" class="btn btn-success">Submit Button</button>

                                }
                            </div>
                           
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>

